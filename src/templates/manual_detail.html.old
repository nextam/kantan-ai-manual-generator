        async function rotateStepImage(step, delta, manual, stage2_resultObj){
            try {
                console.log('回転処理開始:', { step, delta });
                
                // 現在の回転取得 (stage2_resultObj 内)
                const frame = (stage2_resultObj.extracted_frames||[]).find(f=>f.step_number===step);
                if(!frame) {
                    console.error('フレームが見つかりません:', step);
                    return;
                }
                
                console.log('現在のフレーム:', frame);
                
                const current = parseInt(frame.rotation||0);
                let next = (current + delta)%360; if(next<0) next+=360;
                // 0/90/180/270 に正規化
                const allowed=[0,90,180,270];
                next = allowed.reduce((p,c)=> Math.abs(c-next) < Math.abs(p-next)? c:p,0);
                
                console.log('回転角度:', { current, delta, next });
                
                const payload = {
                    step_number: step,
                    rotation: next,
                    stage1_result: parseStageJson(manual.stage1_content),
                    stage2_result: stage2_resultObj,
                    manual_id: manual.id  // 追加：マニュアルIDを送信
                };
                
                console.log('API送信データ:', payload);
                
                const res = await fetch('/api/video-manual/three-stage/rotation', {
                    method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify(payload)
                });
                
                console.log('API応答ステータス:', res.status);
                
                const data = await res.json();
                console.log('API応答データ:', data);
                
                if(!data.status || data.status!=='success'){
                    alert('回転更新失敗: ' + (data.error||'不明なエラー'));
                    return;
                }
                
                // 最新 stage2_result 反映 - グローバル変数も更新
                stage2_resultObj.extracted_frames = data.data.stage2_result.extracted_frames;
                
                // manualオブジェクトも更新
                if (typeof manual.stage2_content === 'string') {
                    manual.stage2_content = JSON.stringify(data.data.stage2_result);
                } else {
                    manual.stage2_content = data.data.stage2_result;
                }
                
                // stage3_contentも更新（重要：HTML更新）
                manual.stage3_content = data.data.html_manual;
                
                console.log('stage2_result更新完了');
                
                // Stage3 HTML 差し替え
                displayManualContent(data.data.html_manual, 'stage3-text');
                console.log('HTMLコンテンツ更新完了');
                
                // 回転UI を再初期化（更新されたデータで）
                initializeRotationUI(manual);
                console.log('UI再初期化完了');
                
            } catch(e){
                console.error('回転更新エラー:', e);
                alert('回転更新エラー: '+ e.message);
            }
        }

