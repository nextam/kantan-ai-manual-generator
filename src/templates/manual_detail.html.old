                    }
                }
                // 一度だけ実行するためイベントリスナーを削除
                video.removeEventListener('loadedmetadata', setInitialTime);
            }, { once: true });
            
            // 動画読み込みエラー時もスピナーを非表示
            video.addEventListener('error', function() {
                if (loadingSpinner) {
