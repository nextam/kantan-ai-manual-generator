            </div>

            <!-- 従来の単一マニュアル表示 -->
            <div id="manual-text" class="manual-text" style="display: none;">
                <!-- マニュアル内容がここに表示される -->
            </div>
        </div>
    </div>

    <script>
        // marked.jsの設定
        marked.setOptions({
            breaks: true,          // 改行を<br>に変換
            gfm: true,            // GitHub Flavored Markdown
            tables: true,         // テーブルサポート
            sanitize: false,      // HTMLタグを許可
            highlight: function (code, lang) {
                return code; // 基本的なコードブロック（シンタックスハイライトは後で追加可能）
            }
        });

        let manualData = null;

        async function loadManual(manualId) {
            try {
                const response = await fetch(`/api/manual/${manualId}`);
                const result = await response.json();
                console.log('APIレスポンス:', result);

                if (result.success) {
                    manualData = result.manual;
                    displayManual(manualData);
                } else {
                    showError('マニュアルの読み込みに失敗しました: ' + result.error);
                }
            } catch (error) {
                showError('エラーが発生しました: ' + error.message);
            }
        }

    function displayManual(manual) {
            console.log('=== displayManual 開始 ===');
            console.log('manual:', manual);
            console.log('manual.manual_type:', manual.manual_type);
            console.log('stage1_content:', manual.stage1_content);
            console.log('stage2_content:', manual.stage2_content);
            console.log('stage3_content:', manual.stage3_content);
            
            // ローディング非表示
            document.getElementById('loading').style.display = 'none';

            // タイトル設定
            document.getElementById('manual-title').textContent = manual.title;
            document.title = manual.title + ' - 詳細';

            // メタ情報設定
            document.getElementById('created-date').textContent = formatDate(manual.created_at);
            document.getElementById('manual-type').textContent = getTypeText(manual.manual_type);
            document.getElementById('estimated-time').textContent = manual.estimated_time || '未設定';
            document.getElementById('target-audience').textContent = getAudienceText(manual.target_audience);

            // 編集ボタンの設定と表示
            const editBtn = document.getElementById('edit-manual-btn');
            editBtn.href = `/manual/${manual.id}/edit`;
            editBtn.style.display = 'inline-flex';

            // マニュアル表示タイプの判定を修正
            const hasStageContent = manual.stage1_content && manual.stage2_content && manual.stage3_content;
            console.log('hasStageContent:', hasStageContent);
            
            if (hasStageContent) {
                // マニュアル（画像あり）の場合（manual_typeに関係なく）
                console.log('マニュアル（画像あり）として表示');
                displayMultiStageManual(manual);
            } else {
                // 従来の単一マニュアルの場合
                console.log('単一マニュアルとして表示');
                displaySingleManual(manual);
            }

            // 動画表示
            console.log('source_videos:', manual.source_videos);
            if (manual.source_videos && manual.source_videos.length > 0) {
                console.log('動画を表示します:', manual.source_videos.length, '個');
                // manual_type が欠落・不一致でも stage3_content に画像用figureが含まれていれば画像ありとみなすフォールバック
                let inferredImageVersion = false;
                try {
                    const s3 = manual.stage3_content || '';
                    // 生成HTML内に figure data-step と img が複数あれば画像あり判定
                    inferredImageVersion = /<figure[^>]*data-step/mi.test(s3) && /<img[^>]+src=/mi.test(s3);
                } catch(e) { /* noop */ }
                const effectiveType = manual.manual_type === 'manual_with_images' || inferredImageVersion ? 'manual_with_images' : manual.manual_type;
                displayVideos(manual.source_videos, effectiveType);
            } else {
                console.log('動画がないため、動画セクションを非表示にします');
                document.getElementById('video-section').style.display = 'none';
            }
        }

    function displaySingleManual(manual) {
            // 単一マニュアル表示
            document.getElementById('manual-text').style.display = 'block';
            document.getElementById('multi-stage-tabs').style.display = 'none';

            // マークダウンをHTMLに変換して表示
            displayManualContent(manual.content, 'manual-text');
        }

    function displayMultiStageManual(manual) {
            // マニュアル（画像あり）表示
            document.getElementById('manual-text').style.display = 'none';
            const multiStageContainer = document.getElementById('multi-stage-tabs');
            multiStageContainer.style.display = 'block';

            // 画像ありバージョンかどうか（最終的なHTML出力済みのはず）
            const isImageVersion = manual.manual_type === 'manual_with_images';

            // 各段階のコンテンツを表示（JSON文字列の場合はパース）
            displayManualContent(parseContentIfNeeded(manual.stage1_content), 'stage1-text', !isImageVersion);
            displayManualContent(parseContentIfNeeded(manual.stage2_content), 'stage2-text', !isImageVersion);
            displayManualContent(parseContentIfNeeded(manual.stage3_content), 'stage3-text', !isImageVersion);

            // マニュアルタイプに応じてタブとヘッダーの表示を制御
            // 上で判定済みの isImageVersion を利用
            console.log('画像ありバージョン判定:', isImageVersion);
            
            if (isImageVersion) {
                // 画像ありバージョンの場合：タブとヘッダーを非表示
                multiStageContainer.classList.add('image-version');
                document.querySelector('.tab-headers').style.display = 'none';
                document.querySelectorAll('.stage-header').forEach(header => {
                    header.style.display = 'none';
                });
                
                // 最終マニュアルタブのみを表示（タブヘッダーなしで）
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.remove('active');
                });
                document.getElementById('tab-stage3').classList.add('active');
                document.getElementById('tab-stage3').style.display = 'block';
                
                console.log('画像ありバージョン: タブとヘッダーを非表示にしました');
            } else {
                // 画像なしバージョンの場合：タブとヘッダーを表示
                multiStageContainer.classList.remove('image-version');
                document.querySelector('.tab-headers').style.display = 'flex';
                document.querySelectorAll('.stage-header').forEach(header => {
                    header.style.display = 'block';
                });
                
                // タブ機能を初期化
                initializeTabs();
                
                console.log('画像なしバージョン: タブとヘッダーを表示しました');
            }

            // 回転編集UI初期化（画像ありバージョンのみ）
            if (isImageVersion) {
                initializeRotationUI(manual);
            }
        }

        function parseContentIfNeeded(content) {
            if (!content) return '';
            
            // JSON文字列として保存されている場合はパース
            if (typeof content === 'string' && content.startsWith('{')) {
                try {
                    const parsed = JSON.parse(content);
                    // パースされたオブジェクトから適切なコンテンツを抽出
                    if (parsed.analysis || parsed.content || parsed.html_manual) {
                        return parsed.analysis || parsed.content || parsed.html_manual || '';
                    }
                    // オブジェクト全体を文字列として返す
                    return JSON.stringify(parsed, null, 2);
                } catch (e) {
                    // JSONパースエラーの場合は元の文字列を返す
                    return content;
                }
            }
            
            return content;
        }

    // allowMarkdown: true の場合のみ markdown を HTML 変換。false ならそのまま（主に画像ありバージョンで既製HTML想定）
    function displayManualContent(content, containerId, allowMarkdown = true) {
            const container = document.getElementById(containerId);
            
            if (!content) {
                container.innerHTML = '<p>コンテンツが見つかりません。</p>';
                return;
            }

            let html;
            
            // allowMarkdown が false の場合のみ生HTML扱い（画像ありバージョン）。true の場合はタグが混ざっていてもMarkdownとして処理
            if (!allowMarkdown) {
                // HTMLとして扱う
                html = content;
                
                // セキュリティ対策：危険なタグを除去
                html = html.replace(/<script[^>]*>[\s\S]*?<\/script>/gi, '');
                html = html.replace(/<style[^>]*>[\s\S]*?<\/style>/gi, ''); // スタイルタグも除去
                html = html.replace(/<link[^>]*>/gi, ''); // 外部CSSリンクも除去
                
                // レイアウト破壊を防ぐスタイルのみ制限
                html = html.replace(/position\s*:\s*fixed/gi, 'position: relative');
                html = html.replace(/position\s*:\s*absolute/gi, 'position: relative');
                html = html.replace(/z-index\s*:\s*\d+/gi, '');
                html = html.replace(/overflow\s*:\s*hidden/gi, ''); // 親要素への影響防止
                
                // 紫色系の色のみを青色系に変換（他の色は保持）
                html = html.replace(/#6A4C93/gi, '#007bff');
                html = html.replace(/#8B5A96/gi, '#007bff');
                html = html.replace(/#9D4EDD/gi, '#007bff');
                html = html.replace(/purple/gi, '#007bff');
                
                // 背景色の紫系のみ変換
                html = html.replace(/background-color\s*:\s*#6A4C93/gi, 'background-color: #e3f2fd');
                html = html.replace(/background-color\s*:\s*#8B5A96/gi, 'background-color: #e3f2fd');
                html = html.replace(/background-color\s*:\s*#9D4EDD/gi, 'background-color: #e3f2fd');
                html = html.replace(/background-color\s*:\s*purple/gi, 'background-color: #e3f2fd');
                
                // HTMLコンテンツを安全なコンテナでラップ
                html = `<div class="generated-content-wrapper">${html}</div>`;
                
                // HTMLコンテンツ用のクラスを追加
                container.classList.add('html-content');
            } else {
                // 強制Markdownパース（HTMLタグ混在可）
                let mdSource = content;
                // 先に危険タグ(script/style/link)だけ除去してからMarkdownパース（Markdown記号誤認防止）
                mdSource = mdSource.replace(/<script[^>]*>[\s\S]*?<\/script>/gi, '')
                                   .replace(/<style[^>]*>[\s\S]*?<\/style>/gi, '')
                                   .replace(/<link[^>]*>/gi, '');
                html = marked.parse(mdSource);
                
                // カスタム注意事項ボックスの変換（marked.js処理後）
                html = html.replace(/⚠️(.*?)(?=<\/p>)/gs, '<div class="warning"><span class="material-icons">warning</span>$1</div>');
                html = html.replace(/❌(.*?)(?=<\/p>)/gs, '<div class="danger"><span class="material-icons">error</span>$1</div>');
                html = html.replace(/ℹ️(.*?)(?=<\/p>)/gs, '<div class="info"><span class="material-icons">info</span>$1</div>');
                html = html.replace(/✅(.*?)(?=<\/p>)/gs, '<div class="success"><span class="material-icons">check_circle</span>$1</div>');

                // 注意事項ボックスを含むpタグを削除
                html = html.replace(/<p>(<div class="(warning|danger|info|success)">)/g, '$1');
                html = html.replace(/(<\/div>)<\/p>/g, '$1');
                
                // Markdownコンテンツ用のクラスを追加
                container.classList.add('markdown-content');
            }

            container.innerHTML = html;
        }

        function isHtmlContent(content) {
            // HTMLタグが含まれているかを判定
            const htmlTagPattern = /<\/?\w+[^>]*>/;
            return htmlTagPattern.test(content);
        }

        function initializeTabs() {
            // タブヘッダーのクリックイベント
            const tabHeaders = document.querySelectorAll('.tab-header');
            const tabContents = document.querySelectorAll('.tab-content');

            tabHeaders.forEach(header => {
                header.addEventListener('click', function () {
                    const targetTab = this.getAttribute('data-tab');

                    // すべてのタブを非アクティブに
                    tabHeaders.forEach(h => h.classList.remove('active'));
                    tabContents.forEach(c => c.classList.remove('active'));

                    // 選択されたタブをアクティブに
                    this.classList.add('active');
                    document.getElementById(`tab-${targetTab}`).classList.add('active');
                });
            });
        }

    function displayVideos(videos, manualType) {
        console.log('displayVideos関数が呼ばれました:', videos);
        const videoSection = document.getElementById('video-section');
        const videoGrid = document.getElementById('video-grid');

        let videosHtml = '';
        videos.forEach(video => {
            const isExpert = video.type === 'expert';
            const labelClass = isExpert ? 'expert-label' : 'novice-label';
            // 要件: 画像ありマニュアル(manual_with_images)では非熟練者ラベルを非表示
            const hideNoviceLabel = (manualType === 'manual_with_images') && !isExpert;
            const labelText = isExpert
                ? '<span class="material-icons" style="font-size: 20px; vertical-align: middle; margin-right: 5px;">star</span>熟練者動画'
                : (hideNoviceLabel ? '' : '<span class="material-icons" style="font-size: 20px; vertical-align: middle; margin-right: 5px;">school</span>非熟練者動画');

            videosHtml += `
                <div class="video-item">
                    ${hideNoviceLabel ? '' : `<div class="video-label ${labelClass}">${labelText}</div>`}
                    <video controls>
                        <source src="${video.url}" type="video/mp4">
                        お使いのブラウザは動画タグをサポートしていません。
                    </video>
                    <div style="margin-top: 10px; font-size: 14px; color: #666;">
                        <div><strong>ファイル名:</strong> ${video.filename}</div>
                        ${video.duration ? `<div><strong>長さ:</strong> ${video.duration}</div>` : ''}
                    </div>
                </div>
            `;
        });

        videoGrid.innerHTML = videosHtml;
        if (manualType === 'manual_with_images') {
            videoGrid.querySelectorAll('.video-item').forEach(item => {
                const label = item.querySelector('.video-label');
                if (!label) {
                    item.style.paddingTop = '10px';
                }
            });
        }
        videoSection.style.display = 'block';
    }

        function getTypeText(type) {
            const typeMap = {
                'basic': '基本マニュアル',
                'multi_stage': 'マニュアル（画像なし）',
                'manual_with_images': 'マニュアル（画像あり）'
            };
            return typeMap[type] || type;
        }

        function getAudienceText(audience) {
            const audienceMap = {
                'beginner': '初心者向け',
                'intermediate': '中級者向け',
                'expert': '熟練者向け'
            };
            return audienceMap[audience] || audience || '未設定';
        }

        function formatDate(dateString) {
            if (!dateString) return '未設定';

            // サーバーから送られてくるのはJST時間の文字列（タイムゾーン情報なし）
            // 明示的にJSTとして解釈する
            let date;
            if (dateString.includes('T') && !dateString.includes('+') && !dateString.includes('Z')) {
                // ISO形式だがタイムゾーン情報がない場合はJSTとして扱う
                date = new Date(dateString + '+09:00');
            } else {
                date = new Date(dateString);
            }

            return date.toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

