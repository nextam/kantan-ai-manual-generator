        function openImageEditor(stepNumber, manual, stage2_result) {
            console.log('画像編集エディター開始:', { stepNumber, manual, stage2_result });
            
            // 対象フレームを検索
            const frame = stage2_result.extracted_frames.find(f => f.step_number === stepNumber);
            if (!frame || !frame.image_data_url) {
                alert('画像データが見つかりません');
                return;
            }
            
            imageEditor.stepNumber = stepNumber;
            imageEditor.manual = manual;
            imageEditor.stage2_result = stage2_result;
            imageEditor.currentFrame = frame; // 現在のフレーム情報を保存
            imageEditor.annotations = [];
            imageEditor.transform = { rotation: 0, flipH: false, flipV: false };
            
            // モーダル表示
            document.getElementById('imageEditorModal').style.display = 'flex';
            
            // キャンバス初期化
            imageEditor.canvas = document.getElementById('imageEditorCanvas');
            imageEditor.ctx = imageEditor.canvas.getContext('2d');
            
            // 画像読み込み
            const img = new Image();
            img.onload = function() {
                imageEditor.originalImage = img;
                imageEditor.currentImage = img;
                
                // キャンバスサイズ設定
                const maxWidth = 800;
                const maxHeight = 600;
                let { width, height } = img;
                
                if (width > maxWidth) {
                    height = (height * maxWidth) / width;
                    width = maxWidth;
                }
                if (height > maxHeight) {
                    width = (width * maxHeight) / height;
                    height = maxHeight;
                }
                
                imageEditor.canvas.width = width;
                imageEditor.canvas.height = height;
                
                drawCurrentImage();
            };
            
            img.src = frame.image_data_url;
        }

        function closeImageEditor() {
            document.getElementById('imageEditorModal').style.display = 'none';
            imageEditor.drawingMode = null;
            document.querySelectorAll('.drawing-tool').forEach(btn => btn.classList.remove('active'));
        }

        function drawCurrentImage() {
            const ctx = imageEditor.ctx;
            const canvas = imageEditor.canvas;
            const img = imageEditor.currentImage;
            
            // キャンバスクリア
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // 変換行列リセット
            ctx.setTransform(1, 0, 0, 1, 0, 0);
            
            // 変換適用
            const centerX = canvas.width / 2;
            const centerY = canvas.height / 2;
            
            ctx.translate(centerX, centerY);
            ctx.rotate((imageEditor.transform.rotation * Math.PI) / 180);
            ctx.scale(
                imageEditor.transform.flipH ? -1 : 1,
                imageEditor.transform.flipV ? -1 : 1
            );
            
            // 画像描画
            ctx.drawImage(img, -canvas.width / 2, -canvas.height / 2, canvas.width, canvas.height);
            
            // 変換行列リセット
            ctx.setTransform(1, 0, 0, 1, 0, 0);
            
            // 注釈描画
            drawAnnotations();
        }

        function rotateImage(degrees) {
            imageEditor.transform.rotation = (imageEditor.transform.rotation + degrees) % 360;
            drawCurrentImage();
        }

        function flipImage(direction) {
            if (direction === 'horizontal') {
                imageEditor.transform.flipH = !imageEditor.transform.flipH;
            } else if (direction === 'vertical') {
                imageEditor.transform.flipV = !imageEditor.transform.flipV;
            }
            drawCurrentImage();
        }

        function setDrawingMode(mode) {
            imageEditor.drawingMode = mode;
            
            // ボタンのアクティブ状態更新
            document.querySelectorAll('.drawing-tool').forEach(btn => btn.classList.remove('active'));
            document.getElementById(mode + 'Btn').classList.add('active');
            
