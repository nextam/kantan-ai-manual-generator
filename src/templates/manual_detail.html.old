                // もしtimestampが見つからない場合、frame_numberから推定を試みる
                if (currentFrameTimestamp === 0 && imageEditor.currentFrame.frame_number && imageEditor.stage2_result.fps) {
                    currentFrameTimestamp = imageEditor.currentFrame.frame_number / imageEditor.stage2_result.fps;
                    console.log(`フレーム番号から計算されたタイムスタンプ: ${currentFrameTimestamp}秒`);
                }
            }
            
            // 動画の読み込み完了後に再生位置を設定
            video.addEventListener('loadedmetadata', function setInitialTime() {
                if (currentFrameTimestamp > 0 && currentFrameTimestamp <= video.duration) {
                    // タイムスタンプ設定時は一時的にスピナーを表示（シーク操作のため）
                    if (loadingSpinner) {
