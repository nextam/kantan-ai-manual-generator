            source.src = videoUrl;
            
            // 動画を再読み込み
            video.load();
            
            // 現在のフレームのタイムスタンプを取得
            let currentFrameTimestamp = 0;
            console.log('現在のフレーム情報:', imageEditor.currentFrame);
            
            if (imageEditor.currentFrame) {
                // フレームオブジェクトの構造をログ出力
                console.log('フレームの全プロパティ:', Object.keys(imageEditor.currentFrame));
                
                // 一般的な可能性のあるプロパティ名をチェック（優先順位順）
                const possibleTimestampKeys = ['timestamp_seconds', 'timestamp', 'time', 'frame_time', 'seconds', 'duration_seconds'];
                for (const key of possibleTimestampKeys) {
                    if (imageEditor.currentFrame[key] !== undefined) {
                        currentFrameTimestamp = imageEditor.currentFrame[key];
                        console.log(`タイムスタンプ発見: ${key} = ${currentFrameTimestamp}`);
                        break;
                    }
