        function setupVideoControls() {
            const video = document.getElementById('recaptureVideo');
            const loadingSpinner = document.getElementById('videoLoadingSpinner');
            
            // 基本的な読み込み監視のみ
            video.addEventListener('loadedmetadata', function() {
                console.log('動画メタデータ読み込み完了:', {
                    duration: video.duration,
                    readyState: video.readyState,
                    currentTime: video.currentTime
                });
            });
            
            // シーク操作開始時にスピナーを表示
            video.addEventListener('seeking', function() {
                if (loadingSpinner) {
                    loadingSpinner.style.display = 'flex';
                    console.log('ローディングスピナー表示（シーク開始）:', video.currentTime, '秒');
                }
            });
            
            // シーク操作完了時にスピナーを非表示
            video.addEventListener('seeked', function() {
                if (loadingSpinner) {
                    loadingSpinner.style.display = 'none';
                    console.log('ローディングスピナー非表示（シーク完了）:', video.currentTime, '秒');
                }
                console.log('再生位置変更完了:', video.currentTime, '秒');
            });
            
            // データ読み込み待ち状態でスピナー表示
            video.addEventListener('waiting', function() {
                if (loadingSpinner) {
                    loadingSpinner.style.display = 'flex';
                    console.log('ローディングスピナー表示（データ待ち）');
                }
            });
            
            // 再生可能状態になったらスピナー非表示
            video.addEventListener('canplay', function() {
                if (loadingSpinner) {
                    loadingSpinner.style.display = 'none';
                    console.log('ローディングスピナー非表示（再生可能）');
                }
            });
            
            // エラー監視
            video.addEventListener('error', function(e) {
                if (loadingSpinner) {
                    loadingSpinner.style.display = 'none';
                    console.log('ローディングスピナー非表示（エラー）');
                }
                console.error('動画エラー:', e, video.error);
            });
        }

        async function captureCurrentFrame() {
            const loadingSpinner = document.getElementById('videoLoadingSpinner');
            const captureButton = document.getElementById('captureFrameBtn');
            
            try {
                // ローディングスピナーを表示し、ボタンを無効化
                if (loadingSpinner) {
                    loadingSpinner.style.display = 'flex';
                    console.log('ローディングスピナー表示（フレームキャプチャ開始）');
                }
                if (captureButton) {
                    captureButton.disabled = true;
                    captureButton.textContent = '⏳ 処理中...';
                    captureButton.style.cursor = 'wait';
                    console.log('キャプチャボタン無効化');
                }
                
                const video = document.getElementById('recaptureVideo');
                const timestamp = video.currentTime;
                
                console.log('フレームキャプチャ開始:', { timestamp, videoSrc: recaptureData.sourceVideoUrl });
                
                // APIでフレームキャプチャ
                const response = await fetch('/api/recapture', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        video_path: extractVideoPath(recaptureData.sourceVideoUrl),
                        timestamp: timestamp
                    })
                });
                
                const result = await response.json();
                console.log('キャプチャAPI応答:', result);
                
                if (result.status === 'success') {
                    // キャプチャ成功 - 直接画像エディターに適用
                    const img = new Image();
                    img.onload = function() {
                        imageEditor.originalImage = img;
                        imageEditor.currentImage = img;
                        
                        // キャンバスサイズを調整
                        const maxWidth = 800;
                        const maxHeight = 600;
                        let { width, height } = img;
                        
                        if (width > maxWidth) {
                            height = (height * maxWidth) / width;
                            width = maxWidth;
                        }
                        if (height > maxHeight) {
                            width = (width * maxHeight) / height;
                            height = maxHeight;
                        }
                        
                        imageEditor.canvas.width = width;
                        imageEditor.canvas.height = height;
                        
                        // 変換をリセット
                        imageEditor.transform = { rotation: 0, flipH: false, flipV: false };
                        imageEditor.annotations = [];
                        
                        // 画像を描画
                        drawCurrentImage();
                        
                        console.log('画像エディターに新しい画像を適用しました');
                        
                        // 処理完了後にスピナーを非表示し、ボタンを復活
                        if (loadingSpinner) {
                            loadingSpinner.style.display = 'none';
                            console.log('ローディングスピナー非表示（キャプチャ完了）');
                        }
                        if (captureButton) {
                            captureButton.disabled = false;
                            captureButton.textContent = 'このフレームを適用';
                            captureButton.style.cursor = 'pointer';
                            console.log('キャプチャボタン復活');
                        }
                        
                        // 再キャプチャモーダルを閉じる
                        closeRecaptureModal();
                        
                        alert('新しい画像を適用しました。編集後「💾 保存」ボタンを押してください。');
                    };
                    
                    img.src = result.data.image_data_url;
                    
                    console.log('フレームキャプチャ成功、画像エディターに適用中');
                } else {
                    // エラー時の処理
                    if (loadingSpinner) {
                        loadingSpinner.style.display = 'none';
                        console.log('ローディングスピナー非表示（キャプチャエラー）');
                    }
                    if (captureButton) {
                        captureButton.disabled = false;
                        captureButton.textContent = 'このフレームを適用';
                        captureButton.style.cursor = 'pointer';
                        console.log('キャプチャボタン復活（エラー）');
                    }
                    alert('フレームキャプチャに失敗しました: ' + (result.error || '不明なエラー'));
                }
                
            } catch (error) {
                // 例外処理
                if (loadingSpinner) {
                    loadingSpinner.style.display = 'none';
                    console.log('ローディングスピナー非表示（例外）');
                }
                if (captureButton) {
                    captureButton.disabled = false;
                    captureButton.textContent = 'このフレームを適用';
                    captureButton.style.cursor = 'pointer';
                    console.log('キャプチャボタン復活（例外）');
                }
                console.error('フレームキャプチャエラー:', error);
                alert('フレームキャプチャ中にエラーが発生しました: ' + error.message);
            }
        }

        function extractVideoPath(videoUrl) {
            // URLからGCSパスを抽出
            // 例: /api/video/gs%3A%2F%2Fmanual_generator%2Fvideo%2F0d262c06-bc61-43bd-837b-a18e9930db88_mp4 
            // -> gs://manual_generator/video/0d262c06-bc61-43bd-837b-a18e9930db88.mp4
            try {
                if (videoUrl.includes('/api/video/')) {
                    // URLエンコードされたパスをデコード
                    const encodedPath = videoUrl.split('/api/video/')[1];
                    const decodedPath = decodeURIComponent(encodedPath);
                    
                    // 拡張子正規化を適用
                    const normalizedPath = fixMp4Extension(decodedPath);
                    
                    console.log('URL解析成功:', { original: videoUrl, decoded: decodedPath, normalized: normalizedPath });
                    return normalizedPath;
                }
                console.log('URL解析失敗、そのまま返します:', videoUrl);
                return videoUrl;
            } catch (e) {
                console.log('URL解析失敗、そのまま返します:', videoUrl);
                return videoUrl;
            }
        }

        // キャンバスイベントリスナー
        document.addEventListener('DOMContentLoaded', function() {
            // キャンバスが作成された後にイベントリスナーを追加
            setTimeout(() => {
                const canvas = document.getElementById('imageEditorCanvas');
                if (!canvas) return;
                
                canvas.addEventListener('mousedown', function(e) {
                    if (!imageEditor.drawingMode) return;
                    
                    const rect = canvas.getBoundingClientRect();
                    imageEditor.isDrawing = true;
                    imageEditor.startX = e.clientX - rect.left;
                    imageEditor.startY = e.clientY - rect.top;
                    
                    if (imageEditor.drawingMode === 'text') {
                        const text = document.getElementById('textInput').value;
                        if (text) {
                            imageEditor.annotations.push({
                                type: 'text',
                                startX: imageEditor.startX,
                                startY: imageEditor.startY,
                                text: text,
                                color: document.getElementById('drawingColor').value,
                                lineWidth: parseInt(document.getElementById('lineWidth').value)
                            });
                            drawCurrentImage();
                            document.getElementById('textInput').value = '';
                        }
                        imageEditor.isDrawing = false;
                    }
                });
                
                canvas.addEventListener('mousemove', function(e) {
                    if (!imageEditor.isDrawing || imageEditor.drawingMode === 'text') return;
                    
                    const rect = canvas.getBoundingClientRect();
                    const currentX = e.clientX - rect.left;
                    const currentY = e.clientY - rect.top;
                    
                    // 一時描画（プレビュー）
                    drawCurrentImage();
                    
                    const ctx = imageEditor.ctx;
                    ctx.strokeStyle = document.getElementById('drawingColor').value;
                    ctx.lineWidth = parseInt(document.getElementById('lineWidth').value);
                    
                    if (imageEditor.drawingMode === 'circle') {
                        ctx.beginPath();
                        const radius = Math.sqrt(
                            Math.pow(currentX - imageEditor.startX, 2) +
                            Math.pow(currentY - imageEditor.startY, 2)
                        );
                        ctx.arc(imageEditor.startX, imageEditor.startY, radius, 0, 2 * Math.PI);
                        ctx.stroke();
                    } else if (imageEditor.drawingMode === 'arrow') {
                        drawArrow(ctx, imageEditor.startX, imageEditor.startY, currentX, currentY);
                    }
                });
                
                canvas.addEventListener('mouseup', function(e) {
                    if (!imageEditor.isDrawing || imageEditor.drawingMode === 'text') return;
                    
                    const rect = canvas.getBoundingClientRect();
                    const endX = e.clientX - rect.left;
                    const endY = e.clientY - rect.top;
                    
                    // 注釈を保存
                    imageEditor.annotations.push({
                        type: imageEditor.drawingMode,
                        startX: imageEditor.startX,
                        startY: imageEditor.startY,
                        endX: endX,
                        endY: endY,
                        color: document.getElementById('drawingColor').value,
                        lineWidth: parseInt(document.getElementById('lineWidth').value)
                    });
                    
                    drawCurrentImage();
                    imageEditor.isDrawing = false;
                });
            }, 100);
        });
    </script>

    <!-- 画像編集モーダル -->
    <div id="imageEditorModal" class="image-editor-modal">
        <div class="image-editor-content">
            <div class="image-editor-header">
                <h3>画像編集</h3>
                <button class="image-editor-close" onclick="closeImageEditor()">&times;</button>
            </div>
            
            <div class="image-editor-toolbar">
                <button id="recaptureBtn" onclick="openRecaptureModal()" style="background: #ff6b35; color: white;">📹 再キャプチャ</button>
                <button id="rotateLeftBtn" onclick="rotateImage(-90)">⟲ 左回転</button>
                <button id="rotateRightBtn" onclick="rotateImage(90)">⟳ 右回転</button>
                <button id="flipHorizontalBtn" onclick="flipImage('horizontal')">↔ 水平反転</button>
                <button id="flipVerticalBtn" onclick="flipImage('vertical')">↕ 垂直反転</button>
                
                <div class="color-picker-group">
                    <button id="circleBtn" onclick="setDrawingMode('circle')" class="drawing-tool">○ 円</button>
                    <button id="arrowBtn" onclick="setDrawingMode('arrow')" class="drawing-tool">→ 矢印</button>
                    <button id="textBtn" onclick="setDrawingMode('text')" class="drawing-tool">T テキスト</button>
                    <label>色:</label>
                    <input type="color" id="drawingColor" value="#ff0000">
                </div>
                
                <div class="text-input-group">
                    <input type="text" id="textInput" placeholder="テキストを入力" style="display: none;">
                    <input type="range" id="lineWidth" min="1" max="10" value="3">
                    <label>太さ</label>
                </div>
                
                <button onclick="clearAnnotations()">🗑 注釈クリア</button>
                <button onclick="saveEditedImage()" style="background: #28a745; color: white;">💾 保存</button>
            </div>
            
            <div class="image-editor-canvas-container">
                <canvas id="imageEditorCanvas" class="image-editor-canvas"></canvas>
            </div>
        </div>
    </div>

    <!-- 再キャプチャモーダル -->
    <div id="recaptureModal" class="image-editor-modal" style="display: none;">
        <div class="image-editor-content" style="max-width: 80vw; max-height: 80vh;">
            <div class="image-editor-header">
                <h3>動画から再キャプチャ</h3>
                <button class="image-editor-close" onclick="closeRecaptureModal()">&times;</button>
            </div>
            
            <div style="display: flex; flex-direction: column; gap: 20px; height: 70vh;">
                <!-- 動画プレーヤー -->
                <div style="display: flex; flex-direction: column;">
                    <h4 style="margin: 0 0 10px 0;">元動画</h4>
                    <div style="position: relative; background: #000; border-radius: 8px; overflow: hidden;">
                        <video id="recaptureVideo" style="width: 100%; height: 60vh; object-fit: contain;" 
                               controls preload="metadata" playsinline muted>
                            <source id="recaptureVideoSource" src="" type="video/mp4">
                            お使いのブラウザは動画タグをサポートしていません。
                        </video>
                        
                        <!-- ローディングスピナー -->
                        <div id="videoLoadingSpinner" style="
                            position: absolute;
                            top: 0;
                            left: 0;
                            right: 0;
                            bottom: 0;
                            display: none;
                            justify-content: center;
                            align-items: center;
                            background: rgba(0, 0, 0, 0.7);
                            z-index: 1000;
                        ">
                            <div style="
                                width: 50px;
                                height: 50px;
                                border: 4px solid rgba(255, 255, 255, 0.3);
                                border-top: 4px solid #fff;
                                border-radius: 50%;
                                animation: spin 1s linear infinite;
                            "></div>
                        </div>
                    </div>
                </div>
                
                <!-- アクションボタン -->
                <div style="display: flex; gap: 15px; justify-content: center; align-items: center;">
                    <button onclick="closeRecaptureModal()" class="btn btn-secondary">キャンセル</button>
                    <button id="captureFrameBtn" onclick="captureCurrentFrame()" class="btn btn-primary">このフレームを適用</button>
                </div>
            </div>
        </div>
    </div>

