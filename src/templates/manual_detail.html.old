            console.log('imageEditor.manual:', imageEditor.manual);
            
            // 拡張子正規化関数（_mp4 -> .mp4）
            function fixMp4Extension(filePath) {
                if (filePath && filePath.endsWith('_mp4')) {
                    return filePath.substring(0, filePath.length - 4) + '.mp4';
                }
                return filePath;
            }
            
            // stage2_contentから動画パスを取得
            let videoPath = null;
            if (imageEditor.manual.stage2_content) {
                try {
                    const stage2Data = typeof imageEditor.manual.stage2_content === 'string' 
                        ? JSON.parse(imageEditor.manual.stage2_content) 
                        : imageEditor.manual.stage2_content;
                    console.log('stage2Data:', stage2Data);
                    videoPath = stage2Data.video_path;
                    
                    // 拡張子を正規化
                    videoPath = fixMp4Extension(videoPath);
                    console.log('Normalized videoPath:', videoPath);
                    
                } catch (e) {
                    console.error('stage2_contentのパースに失敗:', e);
                }
            }
            
            if (!videoPath) {
                alert('元動画が見つかりません。再キャプチャ機能を使用できません。');
                return;
            }
            
            // FlaskのビデオストリーミングエンドポイントURLを生成
            const encodedPath = encodeURIComponent(videoPath);
            const videoUrl = `/api/video/${encodedPath}`;
            
            recaptureData.sourceVideoUrl = videoUrl;
            
            // 動画要素を取得
