                    edited_image_data_url: editedDataUrl,
                    stage1_result: parseStageJson(imageEditor.manual.stage1_content),
                    stage2_result: imageEditor.stage2_result,
                    manual_id: imageEditor.manual.id  // 追加：マニュアルIDを送信
                };
                
                const res = await fetch('/api/video-manual/three-stage/save-edited-image', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                
                const data = await res.json();
                
                if (data.status === 'success') {
                    // stage2_result更新
                    imageEditor.stage2_result.extracted_frames = data.data.stage2_result.extracted_frames;
                    
                    // manualオブジェクト更新
                    if (typeof imageEditor.manual.stage2_content === 'string') {
                        imageEditor.manual.stage2_content = JSON.stringify(data.data.stage2_result);
                    } else {
                        imageEditor.manual.stage2_content = data.data.stage2_result;
                    }
                    
                    // stage3_contentも更新
                    imageEditor.manual.stage3_content = data.data.html_manual;
                    
                    // 該当する画像のみを更新（DOM全体を再描画しない）
                    updateStepImage(imageEditor.stepNumber, editedDataUrl);
                    
                    alert('画像を保存しました');
                    closeImageEditor();
