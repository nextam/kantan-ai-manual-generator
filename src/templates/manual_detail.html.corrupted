                    return !!manual.content_html && !!manual.extracted_images;
                case 'text_with_video_clips':
                    return !!manual.content_html && !!manual.video_clips;
                case 'subtitle_video':
                    return !!manual.content_video_uri && !!manual.subtitles_data;
                case 'hybrid':
                    return !!manual.content_html && !!manual.video_clips && !!manual.extracted_images;
