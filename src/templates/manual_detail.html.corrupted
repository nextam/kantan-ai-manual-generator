<!-- Marked.js for Markdown parsing -->
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

<!-- Component Scripts -->
<script src="{{ url_for('static', filename='js/video_display.js') }}"></script>
<script src="{{ url_for('static', filename='js/image_editor.js') }}"></script>
<script src="{{ url_for('static', filename='js/manual_display.js') }}"></script>

<script>
    // marked.js・ｽﾌ設抵ｿｽ
    marked.setOptions({
            breaks: true,          // ・ｽ・ｽ・ｽs・ｽ・ｽ<br>・ｽﾉ変奇ｿｽ
            gfm: true,            // GitHub Flavored Markdown
            tables: true,         // ・ｽe・ｽ[・ｽu・ｽ・ｽ・ｽT・ｽ|・ｽ[・ｽg
            sanitize: false,      // HTML・ｽ^・ｽO・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ
            highlight: function (code, lang) {
                return code; // ・ｽ・ｽ{・ｽI・ｽﾈコ・ｽ[・ｽh・ｽu・ｽ・ｽ・ｽb・ｽN・ｽi・ｽV・ｽ・ｽ・ｽ^・ｽb・ｽN・ｽX・ｽn・ｽC・ｽ・ｽ・ｽC・ｽg・ｽﾍ鯉ｿｽﾅ追会ｿｽ・ｽﾂ能・ｽj
            }
        });

        let manualData = null;

        async function loadManual(manualId) {
            try {
                // Cache busting: HTTP・ｽw・ｽb・ｽ_・ｽ[・ｽﾅ具ｿｽ・ｽ・ｽ・ｽI・ｽﾉ最新・ｽf・ｽ[・ｽ^・ｽ・ｽ・ｽ謫ｾ
                const response = await fetch(`/api/manual/${manualId}`, {
                    cache: 'no-cache',
                    headers: {
                        'Cache-Control': 'no-cache, no-store, must-revalidate',
                        'Pragma': 'no-cache',
                        'Expires': '0'
                    }
                });
                const result = await response.json();
                console.log('API・ｽ・ｽ・ｽX・ｽ|・ｽ・ｽ・ｽX:', result);

                if (result.success) {
                    manualData = result.manual;
                    // Initialize components
                    videoDisplay.init();
                    // Display manual using component
                    manualDisplay.displayManual(manualData);
                } else {
                    manualDisplay.showError('・ｽ}・ｽj・ｽ・ｽ・ｽA・ｽ・ｽ・ｽﾌ読み搾ｿｽ・ｽﾝに趣ｿｽ・ｽs・ｽ・ｽ・ｽﾜゑｿｽ・ｽ・ｽ: ' + result.error);
                }
            } catch (error) {
                manualDisplay.showError('・ｽG・ｽ・ｽ・ｽ[・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽﾜゑｿｽ・ｽ・ｽ: ' + error.message);
            }
        }

    // Legacy function for backwards compatibility - delegates to manualDisplay component
    function displayManual(manual) {
        manualDisplay.displayManual(manual);
    }

    function displaySingleManual(manual) {
            console.log('=== displaySingleManual ・ｽJ・ｽn ===');
            console.log('content:', manual.content);
            
            // ・ｽP・ｽ・ｽ}・ｽj・ｽ・ｽ・ｽA・ｽ・ｽ・ｽ\・ｽ・ｽ
            const normalManual = document.getElementById('normal-manual');
            const multiStage = document.getElementById('multi-stage-tabs');
            
            if (!normalManual) {
                console.error('normal-manual element not found');
                return;
            }
            if (!multiStage) {
                console.error('multi-stage-tabs element not found');
                return;
            }
            
            console.log('Showing normal-manual, hiding multi-stage-tabs');
            normalManual.style.display = 'block';
            multiStage.style.display = 'none';

            // content・ｽt・ｽB・ｽ[・ｽ・ｽ・ｽh・ｽﾌ擾ｿｽ・ｽ・ｽ
            let contentToDisplay = manual.content;
            
            console.log('contentToDisplay type:', typeof contentToDisplay);
            console.log('contentToDisplay starts with {:', contentToDisplay && contentToDisplay.startsWith('{'));
            
            // Python・ｽ・ｽ・ｽ・ｽ・ｽ`・ｽ・ｽ・ｽﾌ包ｿｽ・ｽ・ｽ・ｽ・ｽ・ｽJSON・ｽﾉ変奇ｿｽ・ｽ・ｽ・ｽﾄ会ｿｽ・ｽ
            if (typeof contentToDisplay === 'string' && contentToDisplay.startsWith("{")) {
                try {
                    console.log('Python・ｽ・ｽ・ｽ・ｽ・ｽ`・ｽ・ｽ・ｽﾌ包ｿｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽo・ｽA・ｽp・ｽ[・ｽX・ｽ・ｽ・ｽs');
                    // ・ｽV・ｽ・ｽ・ｽO・ｽ・ｽ・ｽN・ｽH・ｽ[・ｽg・ｽ・ｽ・ｽ_・ｽu・ｽ・ｽ・ｽN・ｽH・ｽ[・ｽg・ｽﾉ変奇ｿｽ・ｽi・ｽ・ｽ・ｽ・ｽ・ｽﾈ撰ｿｽ・ｽK・ｽ\・ｽ・ｽ・ｽj
                    let jsonStr = contentToDisplay
                        .replace(/'/g, '"')
                        .replace(/\bNone\b/g, 'null')
                        .replace(/\bTrue\b/g, 'true')
                        .replace(/\bFalse\b/g, 'false');
                    
                    const parsedContent = JSON.parse(jsonStr);
                    console.log('・ｽp・ｽ[・ｽX・ｽ・ｽ・ｽ・ｽ:', parsedContent);
                    
                    // analysis_result・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ鼾・ｿｽA・ｽ・ｽ・ｽ・ｽ・ｽ・ｽt・ｽH・ｽ[・ｽ}・ｽb・ｽg・ｽ・ｽ・ｽﾄ表・ｽ・ｽ
                    if (parsedContent.analysis_result) {
                        contentToDisplay = formatAnalysisResult(parsedContent.analysis_result);
                    } else {
                        contentToDisplay = JSON.stringify(parsedContent, null, 2);
