        function parseContentIfNeeded(content) {
            if (!content) return '';
            
            // JSON・ｽ・ｽ・ｽ・ｽ・ｽ・ｽﾆゑｿｽ・ｽﾄ保托ｿｽ・ｽ・ｽ・ｽ・ｽﾄゑｿｽ・ｽ・ｽ鼾・ｿｽﾍパ・ｽ[・ｽX
            if (typeof content === 'string' && content.startsWith('{')) {
                try {
                    const parsed = JSON.parse(content);
                    // ・ｽp・ｽ[・ｽX・ｽ・ｽ・ｽ黷ｽ・ｽI・ｽu・ｽW・ｽF・ｽN・ｽg・ｽ・ｽ・ｽ・ｽK・ｽﾘなコ・ｽ・ｽ・ｽe・ｽ・ｽ・ｽc・ｽ鰹o
                    if (parsed.analysis || parsed.content || parsed.html_manual) {
                        return parsed.analysis || parsed.content || parsed.html_manual || '';
                    }
                    // ・ｽI・ｽu・ｽW・ｽF・ｽN・ｽg・ｽS・ｽﾌを文趣ｿｽ・ｽ・ｽﾆゑｿｽ・ｽﾄ返ゑｿｽ
                    return JSON.stringify(parsed, null, 2);
                } catch (e) {
                    // JSON・ｽp・ｽ[・ｽX・ｽG・ｽ・ｽ・ｽ[・ｽﾌ場合・ｽﾍ鯉ｿｽ・ｽﾌ包ｿｽ・ｽ・ｽ・ｽ・ｽ・ｽﾔゑｿｽ
                    return content;
                }
            }
            
            return content;
        }

    // allowMarkdown: true ・ｽﾌ場合・ｽﾌゑｿｽ markdown ・ｽ・ｽ HTML ・ｽﾏ奇ｿｽ・ｽBfalse ・ｽﾈらそ・ｽﾌまま（・ｽ・ｽﾉ画像・ｽ・ｽ・ｽ・ｽo・ｽ[・ｽW・ｽ・ｽ・ｽ・ｽ・ｽﾅ奇ｿｽ・ｽ・ｽHTML・ｽz・ｽ・ｽj
    function displayManualContent(content, containerId, allowMarkdown = true) {
            console.log('=== displayManualContent ・ｽJ・ｽn ===');
            console.log('containerId:', containerId);
            console.log('allowMarkdown:', allowMarkdown);
            console.log('content length:', content ? content.length : 0);
            
            const container = document.getElementById(containerId);
            
            if (!container) {
                console.error('Container not found:', containerId);
                return;
            }
            
            console.log('Container found:', container);
            
            if (!content) {
                container.innerHTML = '<p>・ｽR・ｽ・ｽ・ｽe・ｽ・ｽ・ｽc・ｽ・ｽ・ｽ・ｽ・ｽﾂゑｿｽ・ｽ・ｽﾜゑｿｽ・ｽ・ｽB</p>';
                return;
            }

            let html;
            
            // allowMarkdown ・ｽ・ｽ false ・ｽﾌ場合・ｽﾌみ撰ｿｽHTML・ｽ・ｽ・ｽ・ｽ・ｽi・ｽ鞫懶ｿｽ・ｽ・ｽ・ｽo・ｽ[・ｽW・ｽ・ｽ・ｽ・ｽ・ｽj・ｽBtrue ・ｽﾌ場合・ｽﾍタ・ｽO・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽﾄゑｿｽ・ｽﾄゑｿｽMarkdown・ｽﾆゑｿｽ・ｽﾄ擾ｿｽ・ｽ・ｽ
            if (!allowMarkdown) {
                // HTML・ｽﾆゑｿｽ・ｽﾄ茨ｿｽ・ｽ・ｽ
                html = content;
                
                // ・ｽZ・ｽL・ｽ・ｽ・ｽ・ｽ・ｽe・ｽB・ｽﾎ搾ｿｽF・ｽ・ｯ・ｽﾈタ・ｽO・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ
                html = html.replace(/<script[^>]*>[\s\S]*?<\/script>/gi, '');
                html = html.replace(/<style[^>]*>[\s\S]*?<\/style>/gi, ''); // ・ｽX・ｽ^・ｽC・ｽ・ｽ・ｽ^・ｽO・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ
                html = html.replace(/<link[^>]*>/gi, ''); // ・ｽO・ｽ・ｽCSS・ｽ・ｽ・ｽ・ｽ・ｽN・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ
                
                // ・ｽ・ｽ・ｽC・ｽA・ｽE・ｽg・ｽj・ｽ・ｽ・ｽh・ｽ・ｽ・ｽX・ｽ^・ｽC・ｽ・ｽ・ｽﾌみ撰ｿｽ・ｽ・ｽ
                html = html.replace(/position\s*:\s*fixed/gi, 'position: relative');
                html = html.replace(/position\s*:\s*absolute/gi, 'position: relative');
                html = html.replace(/z-index\s*:\s*\d+/gi, '');
                html = html.replace(/overflow\s*:\s*hidden/gi, ''); // ・ｽe・ｽv・ｽf・ｽﾖの影・ｽ・ｽ・ｽh・ｽ~
                
                // ・ｽ・ｽ・ｽF・ｽn・ｽﾌ色・ｽﾌみゑｿｽﾂ色・ｽn・ｽﾉ変奇ｿｽ・ｽi・ｽ・ｽ・ｽﾌ色・ｽﾍ保趣ｿｽ・ｽj
                html = html.replace(/#6A4C93/gi, '#007bff');
                html = html.replace(/#8B5A96/gi, '#007bff');
                html = html.replace(/#9D4EDD/gi, '#007bff');
                html = html.replace(/purple/gi, '#007bff');
                
                // ・ｽw・ｽi・ｽF・ｽﾌ趣ｿｽ・ｽn・ｽﾌみ変奇ｿｽ
                html = html.replace(/background-color\s*:\s*#6A4C93/gi, 'background-color: #e3f2fd');
                html = html.replace(/background-color\s*:\s*#8B5A96/gi, 'background-color: #e3f2fd');
                html = html.replace(/background-color\s*:\s*#9D4EDD/gi, 'background-color: #e3f2fd');
                html = html.replace(/background-color\s*:\s*purple/gi, 'background-color: #e3f2fd');
                
                // HTML・ｽR・ｽ・ｽ・ｽe・ｽ・ｽ・ｽc・ｽ・ｽ・ｽ・ｽ・ｽS・ｽﾈコ・ｽ・ｽ・ｽe・ｽi・ｽﾅ・ｿｽ・ｽb・ｽv
                html = `<div class="generated-content-wrapper">${html}</div>`;
                
                // HTML・ｽR・ｽ・ｽ・ｽe・ｽ・ｽ・ｽc・ｽp・ｽﾌク・ｽ・ｽ・ｽX・ｽ・ｽﾇ会ｿｽ
                container.classList.add('html-content');
            } else {
                // ・ｽ・ｽ・ｽ・ｽMarkdown・ｽp・ｽ[・ｽX・ｽiHTML・ｽ^・ｽO・ｽ・ｽ・ｽﾝ可）
                let mdSource = content;
                // ・ｽ・ｽﾉ危険・ｽ^・ｽO(script/style/link)・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽﾄゑｿｽ・ｽ・ｽMarkdown・ｽp・ｽ[・ｽX・ｽiMarkdown・ｽL・ｽ・ｽ・ｽ・ｽF・ｽh・ｽ~・ｽj
                mdSource = mdSource.replace(/<script[^>]*>[\s\S]*?<\/script>/gi, '')
                                   .replace(/<style[^>]*>[\s\S]*?<\/style>/gi, '')
                                   .replace(/<link[^>]*>/gi, '');
                html = marked.parse(mdSource);
                
                // Custom callout boxes transformation (after marked.js processing)
                // Warning box: ⚠️ text -> styled warning div
                html = html.replace(/⚠️(.*?)(?=<\/p>)/gs, '<div class="warning"><span class="material-icons">warning</span>$1</div>');
                // Danger box: ❌ text -> styled danger div
                html = html.replace(/❌(.*?)(?=<\/p>)/gs, '<div class="danger"><span class="material-icons">error</span>$1</div>');
                // Info box: ℹ️ text -> styled info div
                html = html.replace(/ℹ️(.*?)(?=<\/p>)/gs, '<div class="info"><span class="material-icons">info</span>$1</div>');
                // Success box: ✅ text -> styled success div
                html = html.replace(/✅(.*?)(?=<\/p>)/gs, '<div class="success"><span class="material-icons">check_circle</span>$1</div>');

                // ・ｽ・ｽ・ｽﾓ趣ｿｽ・ｽ・ｽ・ｽ{・ｽb・ｽN・ｽX・ｽ・ｽ・ｽﾜゑｿｽp・ｽ^・ｽO・ｽ・ｽ・ｽ尞・
                html = html.replace(/<p>(<div class="(warning|danger|info|success)">)/g, '$1');
                html = html.replace(/(<\/div>)<\/p>/g, '$1');
                
                // Markdown・ｽR・ｽ・ｽ・ｽe・ｽ・ｽ・ｽc・ｽp・ｽﾌク・ｽ・ｽ・ｽX・ｽ・ｽﾇ会ｿｽ
                container.classList.add('markdown-content');
            }

            container.innerHTML = html;
            console.log('Content rendered successfully in:', containerId);
            console.log('=== displayManualContent ・ｽ・ｽ・ｽ・ｽ ===');
        }

