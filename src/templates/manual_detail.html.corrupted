        function formatDate(dateString) {
            if (!dateString) return '・ｽ・ｽ・ｽﾝ抵ｿｽ';

            // ・ｽT・ｽ[・ｽo・ｽ[・ｽ・ｽ・ｽ迹暦ｿｽ・ｽ・ｽﾄゑｿｽ・ｽ・ｽﾌゑｿｽJST・ｽ・ｽ・ｽﾔの包ｿｽ・ｽ・ｽ・ｽ・ｽi・ｽ^・ｽC・ｽ・ｽ・ｽ]・ｽ[・ｽ・ｽ・ｽ・ｽ・ｽﾈゑｿｽ・ｽj
            // ・ｽ・ｽ・ｽ・ｽ・ｽI・ｽ・ｽJST・ｽﾆゑｿｽ・ｽﾄ会ｿｽ・ｽﾟゑｿｽ・ｽ・ｽ
            let date;
            if (dateString.includes('T') && !dateString.includes('+') && !dateString.includes('Z')) {
                // ISO・ｽ`・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ・ｽ^・ｽC・ｽ・ｽ・ｽ]・ｽ[・ｽ・ｽ・ｽ・ｽｪなゑｿｽ・ｽ鼾・ｿｽ・ｽJST・ｽﾆゑｿｽ・ｽﾄ茨ｿｽ・ｽ・ｽ
                date = new Date(dateString + '+09:00');
            } else {
                date = new Date(dateString);
            }

            return date.toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

