# ============================================
# Google Cloud Platform Configuration
# ============================================

# Google Cloud Authentication (Service Account)
# Path to service account JSON key file (relative to project root)
# This is the RECOMMENDED and SECURE way for production environments
GOOGLE_APPLICATION_CREDENTIALS="gcp-credentials.json"

# Google Cloud Storage Bucket Name
# Create a bucket in GCS for storing uploaded videos and generated files
GCS_BUCKET_NAME="kantan-ai-manual-generator"

# Vertex AI Location/Region
# Recommended: us-central1, asia-northeast1, europe-west1
VERTEX_AI_LOCATION="us-central1"

# ============================================
# Database Configuration
# ============================================

# SQLite database URL
# Default: sqlite:///instance/manual_generator.db
DATABASE_URL="sqlite:///instance/manual_generator.db"
DATABASE_PATH="/instance/manual_generator.db"

# ============================================
# Application Configuration
# ============================================

# Flask Environment (development/production)
FLASK_ENV="development"

# Debug Mode (True/False)
DEBUG="True"

# Secret Key for Session Management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY="your-secret-key-here-change-in-production"

# Support Email Address
SUPPORT_EMAIL="support@your-domain.com"

# ============================================
# Logging Configuration
# ============================================

# Log Level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL="INFO"

# Log Directory (relative to project root)
LOG_DIR="logs"

# ============================================
# Server Configuration
# ============================================

# Server Port
PORT="5000"

# Server Host
HOST="0.0.0.0"

