# ============================================
# Google Cloud Platform Configuration
# ============================================

# Google Cloud Authentication (Service Account)
# Path to service account JSON key file (relative to project root)
# This is the RECOMMENDED and SECURE way for production environments
GOOGLE_APPLICATION_CREDENTIALS="gcp-credentials.json"

# Storage Type (local/gcs)
# For production and development, use GCS for Vertex AI video analysis compatibility
STORAGE_TYPE="gcs"

# Environment (development/production)
# Determines GCS bucket: development → kantan-ai-manual-generator-dev, production → kantan-ai-manual-generator-live
ENVIRONMENT="development"

# Google Cloud Storage Bucket Name
# Development: kantan-ai-manual-generator-dev
# Production: kantan-ai-manual-generator-live
# Bucket is auto-selected based on ENVIRONMENT variable
GCS_BUCKET_NAME="kantan-ai-manual-generator-dev"

# Vertex AI Location/Region
# Recommended: us-central1, asia-northeast1, europe-west1
VERTEX_AI_LOCATION="us-central1"

# ============================================
# Database Configuration
# ============================================

# Database Type: sqlite or postgresql
# For development with Docker: postgresql
# For simple local development: sqlite
DATABASE_TYPE="postgresql"

# SQLite Configuration (if DATABASE_TYPE=sqlite)
DATABASE_URL="sqlite:///instance/manual_generator.db"
DATABASE_PATH="/instance/manual_generator.db"

# PostgreSQL Configuration (if DATABASE_TYPE=postgresql)
# Development (Docker): postgresql://kantan_user:kantan_password@localhost:5432/kantan_ai_manual_generator
# Production (RDS): postgresql://username:password@rds-endpoint:5432/dbname
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_USER="kantan_user"
POSTGRES_PASSWORD="kantan_password"
POSTGRES_DB="kantan_ai_manual_generator"

# ============================================
# Application Configuration
# ============================================

# Flask Environment (development/production)
FLASK_ENV="development"

# Debug Mode (True/False)
DEBUG="True"

# Secret Key for Session Management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY="your-secret-key-here-change-in-production"

# Support Email Address
SUPPORT_EMAIL="support@your-domain.com"

# ============================================
# Logging Configuration
# ============================================

# Log Level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL="INFO"

# Log Directory (relative to project root)
LOG_DIR="logs"

# ============================================
# Server Configuration
# ============================================

# Server Port
PORT="5000"

# Server Host
HOST="0.0.0.0"

# ============================================
# Video Optimization Configuration
# ============================================

# Enable Video Optimization (true/false)
# Automatically compress and optimize uploaded videos
ENABLE_VIDEO_OPTIMIZATION="true"

# Video Optimization Quality (360p/720p/1080p)
# Default: 720p (balanced quality and file size)
VIDEO_OPTIMIZATION_QUALITY="720p"

# Enable HLS Generation (true/false)
# Generate adaptive streaming HLS playlists for videos
ENABLE_HLS_GENERATION="true"

# HLS Quality Levels (comma-separated: 360p,720p,1080p)
# Multiple qualities for adaptive bitrate streaming
HLS_QUALITY_LEVELS="360p,720p"

# ============================================
# CDN Configuration
# ============================================

# CDN Domain (optional)
# If configured, CDN URLs will be used instead of direct GCS URLs
# Example: cdn.kantan-ai.net
CDN_DOMAIN=""

# CDN Cache TTL for Videos (seconds)
# Default: 86400 (24 hours)
CDN_VIDEO_CACHE_TTL="86400"

# CDN Cache TTL for Images (seconds)
# Default: 604800 (7 days)
CDN_IMAGE_CACHE_TTL="604800"

